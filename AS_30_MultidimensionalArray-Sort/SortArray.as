/*	Demonstration of sorting a multidimensional array*/package  {		import flash.display.MovieClip;			public class SortArray extends MovieClip {				private var food:Array = new Array()				public function SortArray() {			// constructor code			food[0]= {calories:300, food:"apple"}			food[1]={calories:500, food:"cookies"}			food[2]={calories:100, food:"pear"}			food[3]={calories:750, food:"pizza"}			food[4]={calories:275, food:"grape"}						trace("***Before the sort ***")			outputArray();						// SORT based on the index in descending numeric order			food = food.sortOn("calories", Array.DESCENDING | Array.NUMERIC)						trace("***After the sort ***")			outputArray();						/* OTHER SORTING OPTIONS			Array.NUMERIC: low to high 5 before 6.			Array.CASEINSENSITIVElowercase get the priority.			Array.DESCENDING: Z before A and 10 before 1.			Array.UNIQUESORT: ends sort if two identical values are found.			*/		}				private function outputArray(){			for(var i:int = 0; i<food.length; i++){                trace(food[i].calories, food[i].food)			}		}	}	}