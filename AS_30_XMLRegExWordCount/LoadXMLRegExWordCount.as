package  {		import flash.display.MovieClip;	import flash.events.Event;	import flash.net.URLLoader;	import flash.net.URLRequest;		public class LoadXMLRegExWordCount extends MovieClip {				private var xml:XML		private var xmlLoader:URLLoader		private var words:Array = new Array()				public function LoadXMLRegExWordCount() {			// constructor code			init();		}		private function init():void{			xmlLoader = new URLLoader()			xmlLoader.load(new URLRequest("http://rss.cnn.com/rss/cnn_topstories.rss"))			xmlLoader.addEventListener(Event.COMPLETE, onXMLLoadComplete)		}		// LOAD XML		private function onXMLLoadComplete(e:Event):void{			xmlLoader.removeEventListener(Event.COMPLETE, onXMLLoadComplete)			xml = new XML(e.target.data)						// CREATE A LONG STRING OF NEWS INFORMATION			var desc:String =""			for(var i:int=0; i<xml.channel.item.length(); i++){			  desc += xml.channel.item[i].description			  desc = desc.slice(0,desc.indexOf("<div"))			}						// REMOVE PUNCTUATION			desc = desc.replace(/\,/g, "");			desc = desc.replace(/\?/g, " ");			desc = desc.replace(/\./g, " ");			desc = desc.replace(/\"/g, "");			// OUTPUT LONG STRING			trace(desc)						// CONVERT STRING TO AN ARRAY			words=(desc.split(" "))						// OUTPUT WORD COUNT			trace(getResults("she"))			trace(getResults("he"))					}		// COUNT WORDS IN THE ARRAY		private function getResults(searchItem:String):int{			var count:int =0			for(var j:int=0; j<words.length;j++){				if(words[j].toLowerCase() ==searchItem.toLowerCase()){					count++				}			}			return count;		}	}	}